benc@Minty ~ $ cat > library-check.sh << "EOF"
> #!/bin/bash
> for lib in lib{gmp,mpfr,mpc}.la; do
>   echo $lib: $(if find /usr/lib* -name $lib|
>                grep -q $lib;then :;else echo not;fi) found
> done
> unset lib
> EOF
benc@Minty ~ $ 
benc@Minty ~ $ bash library-check.sh
libgmp.la: not found
libmpfr.la: not found
libmpc.la: not found
